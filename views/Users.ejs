<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8" />
  <title>DONORS AND HELP-SEEKERS</title>

  <style>
    .table {
      margin: 0 auto;
    font-size: large;
    border: 1px solid black;
    background-color: #b3f7a2;
    position: relative;
    top: 8vh;
    }

    h1 {
      margin: 0;
    /* z-index: 1000000; */
    /* position: sticky; */
    text-align: center;
    color: #006600;
    font-size: 4rem;
    font-family: "Gill Sans", "Gill Sans MT", " Calibri", "Trebuchet MS", "sans-serif";
}

    td {
      background-color: #e4f5d4;
      border: 1px solid black;
    }

    body {
      background-image: url(images/image2.png);
    background-size: cover;
    /* background-repeat: inherit; */
    height: 100vh;
    width: 100vw;
    }

    th,
    td {
      font-weight: bold;
      border: 1px solid black;
      padding: 10px;
      text-align: center;
    }

    td {
      font-weight: bolder;
    }

    .head {
      background-color: rgb(243, 250, 182);
    }

    input {
      text-align: center;
      font-size: larger;
      border: 0px;
    }

    .two {
      display: flex;
    }

    .rect {
      min-width: 300px;
      padding-bottom: 15px;
      top: 6vh;
    height: 9vh;
    border: 5px solid cornflowerblue;
    /* position: relative; */
    border-radius: 23px;
    left: 39vw;
    background-color: aliceblue;
    width: 24vw;
    position: relative;
    }

    .button {
      color: #fff;
      background-color: #009090;
      text-transform: capitalize;
      border-radius: 0.5rem;
      cursor: pointer;
    }
  </style>
</head>

<body>
  <div class="rect">
    <h1>CoviCure</h1>
</div>
  <table class="table">
    <thead class="head">
      <th>NAME</th>
      <th>CATEGORY</th>
      <th>FREE DONOR</th>
      <th>RESOURCE</th>
      <th>CONTACT</th>
    </thead>
    <% users.forEach(function(eachUser){ %>
      <tr>
        <td>
          <%= eachUser.fullname %>
        </td>
        <!-- <td><%= eachUser.email %></td> -->
        <!-- <td><%= eachUser.add %></td> -->
        <td>
          <%= eachUser.category %>
        </td>
        <td>
          <%= eachUser.vaccinated %>
        </td>
        <td>
          <%= eachUser.msg %>
        </td>
        <td>
          <a href="mailto:<%=eachUser.email%>">
          <button class="button">E-mail</button></a>
        </td>
      </tr>
      <% }) %>
  </table>
</body>

</html>